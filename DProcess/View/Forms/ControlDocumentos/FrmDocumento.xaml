<Controls:MetroWindow x:Class="View.Forms.ControlDocumentos.FrmDocumento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.Forms.ControlDocumentos"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="" Height="998.5" Width="1566.5"  BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="2" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <DataTemplate x:Key="ListCheck">
            <Border x:Name="Border" Padding="8" BorderThickness="0 0 0 1" Width="280"  BorderBrush="{DynamicResource MaterialDesignDivider}">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ToggleButton   IsChecked="{Binding Path=selected}"
                                         Style="{StaticResource MaterialDesignActionToggleButton}"
                                          Content="X" ToolTip="{Binding Path=validacion_descripcion}" />
                    <TextBlock FontWeight="Bold" Text="{Binding Path=validacion_documento}" Grid.Column="1"></TextBlock>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding selected}" Value="True"  >
                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource MaterialDesignSelection}" />
                </DataTrigger>

            </DataTemplate.Triggers>


        </DataTemplate>

        <!--Lista de Archivos-->
        <DataTemplate x:Key="Lista">
            <Border Margin="5" BorderThickness="1" BorderBrush="#FF2196F3" CornerRadius="4" Width="445" Height="100">
                <Grid Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="110">
                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!--Columna0-->
                    <TextBlock Text="Nombre: " FontSize="14" Grid.Column="0" HorizontalAlignment="Left"></TextBlock>
                    <TextBlock FontWeight="Bold" Text="{Binding Path=nombre}" TextWrapping="WrapWithOverflow" TextAlignment="Center" Grid.Column="0" HorizontalAlignment="Right" Padding="2"></TextBlock>
                    <TextBlock Text="Extensión: " FontSize="14" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Path=ext}" HorizontalAlignment="Right" Padding="2" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                    <Button  Grid.Column="0" Content="Eliminar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#FFE27B7B" BorderBrush="#FFD36B6B" Command="{Binding Path=DataContext.EliminarItem,RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" CommandParameter="{Binding Path=SelectedItem}"/>
                    <Button  Grid.Column="0" Content="Ver" Width="80" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Command="{Binding Path=DataContext.VerArchivo,RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" CommandParameter="{Binding Path=SelectedItem}"></Button>

                    <!--Columna1-->
                    <Image Name="img_icono" Source="{Binding Path=ruta}" Grid.Column="1" HorizontalAlignment="Stretch" Width="70" VerticalAlignment="Stretch"></Image>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>


    <Grid Margin="0,0,-2,328">
        <Grid.RowDefinitions>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <Canvas HorizontalAlignment="Left" Height="816" Margin="0,56,0,-236" VerticalAlignment="Top" Width="1163" Grid.RowSpan="2">

            <!--Nombre Documento-->
            <Label x:Name="label" Content="Número de Documento" Height="31" Canvas.Left="83" Canvas.Top="10" Width="196" FontSize="16" FontWeight="Bold"/>
            <Rectangle Fill="#89DCDCDC" Height="38" Canvas.Left="83" Canvas.Top="51" Width="51" Stroke="#FFBDBDBD"/>
            <Rectangle Width="47" Height="38" Canvas.Top="51" RenderTransformOrigin="0.871,0.394" Canvas.Left="86">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/View;component/Images/name.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <ComboBox x:Name="comboBox4" Height="38" Canvas.Left="134" Canvas.Top="51" Width="467" BorderThickness="1" Background="White" BorderBrush="#89535353" FontSize="18" ItemsSource="{Binding ListaNumeroDocumento}" DisplayMemberPath="nombre"  SelectedItem="{Binding SelectedDocumento}" IsEnabled="{Binding NombreEnabled}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction
									Command="{Binding CambiarCombo}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
            <!--Version-->
            <Label x:Name="label1" Content="Versión" Height="30" Canvas.Left="83" Canvas.Top="107" Width="68" FontSize="16" FontWeight="Bold"/>
            <Rectangle Fill="#89DCDCDC" Height="38" Canvas.Left="83" Canvas.Top="137" Width="51" Stroke="#FFBDBDBD"/>
            <Rectangle Width="39" Height="32" Canvas.Top="140" RenderTransformOrigin="0.871,0.394" Canvas.Left="90">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/View;component/Images/copy.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <TextBox x:Name="txt_version" Canvas.Left="134" TextWrapping="Wrap" Canvas.Top="137" Height="38"  Width="467" BorderThickness="1" BorderBrush="#89535353" FontSize="18" Text="{Binding Version}" IsEnabled="{Binding VersionEnabled}"/>

            <!--Date-->
            <DatePicker x:Name="txt_fecha"  Height="38" Canvas.Left="133" Canvas.Top="226" Width="467" DisplayDateEnd="{x:Static System:DateTime.Today}" BorderThickness="1" BorderBrush="#89535353" FontSize="18" SelectedDate="{Binding Fecha}"/>
            <Rectangle Fill="#89DCDCDC" Height="38" Canvas.Left="83" Canvas.Top="226" Width="51" Stroke="#FFBDBDBD"/>
            <Rectangle Width="40" Height="39" Canvas.Top="226" RenderTransformOrigin="0.871,0.394" Canvas.Left="89">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/View;component/Images/date.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Label x:Name="label2" Content="Fecha de Creación" Height="32" Canvas.Left="84" Canvas.Top="194" Width="146" FontSize="16" FontWeight="Bold"/>

            <!--Numero de Copias-->

            <!--Descripción-->
            <TextBox Text="{Binding Descripcion}" Canvas.Left="88" Canvas.Top="700" RenderTransformOrigin="-4.028,-0.333" Height="38"  Width="515" BorderThickness="1" BorderBrush="#89535353" FontSize="18"></TextBox>
            <Label x:Name="label3" Content="Nombre del Documento" Height="34" Canvas.Left="90" Canvas.Top="666" FontSize="16" FontWeight="Bold"/>

            <!--Buttons-->
            <Button x:Name="button"  Height="47" Width="77" RenderTransformOrigin="0.495,0.578" BorderBrush="#89DCDCDC" Canvas.Left="1075" Canvas.Top="743"  Command="{Binding LlenarLista}" Background="#89F2F5F7" ToolTip="Abrir archivo">
                <Rectangle Width="40" Height="39" Canvas.Top="226" RenderTransformOrigin="0.871,0.394" Canvas.Left="89">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/View;component/Images/folder.png"/>
                    </Rectangle.Fill>
                </Rectangle>

            </Button>

            <Canvas Height="64" Canvas.Left="70" Canvas.Top="819" Width="826" RenderTransformOrigin="0.5,0.5">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.098"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.748"/>
                    </TransformGroup>
                </Canvas.RenderTransform>
                <Button x:Name="bttn_guardar" Content="{Binding BotonGuardar}" Height="41" Canvas.Top="10" Width="135" Canvas.Left="38" Command="{Binding GuardarControl}" Background="#FF157EFB" Visibility="{Binding BttnGuardar, Converter={StaticResource BoolToVis}, FallbackValue=Visible}" />
                <Button x:Name="bttn_cancelar" Content="Cancelar" Height="41" Canvas.Left="202" Canvas.Top="10" Width="135" Command="{Binding Cancelar}" Background="#FF157EFB" Visibility="{Binding BttnCancelar, Converter={StaticResource BoolToVis}, FallbackValue=Hidden}"/>
                <Button x:Name="bttn_eliminar" Content="Eliminar" Canvas.Left="522" Canvas.Top="10" Width="135" Height="41" Background="#FF157EFB" Command="{Binding Eliminar}" Visibility="{Binding BttnEliminar, Converter={StaticResource BoolToVis}, FallbackValue=Hidden}"/>
                <Button x:Name="bttn_cambios" Content="Modificar" Height="41" Canvas.Left="362" Canvas.Top="10" Width="135" Background="#FF157EFB" Command="{Binding Modificar}" Visibility="{Binding BttnModificar, Converter={StaticResource BoolToVis}, FallbackValue=Hidden}"/>
                <Button x:Name="bttn_generar" Content="Generar Versión" Height="41" Canvas.Left="681" Canvas.Top="10" Width="135" Background="#FF157EFB" Command="{Binding GenerarVersion}" Visibility="{Binding BttnVersion, Converter={StaticResource BoolToVis}, FallbackValue=Hidden}"/>
            </Canvas>

            <!--ListView Archivos-->

            <ListBox Name="listBox" Height="687" Canvas.Left="666" Canvas.Top="51" Width="486" ItemsSource="{Binding ListaDocumentos}" ItemTemplate="{StaticResource Lista}" BorderBrush="#FFB8B6B6" BorderThickness="1" Background="White" Foreground="#DD040404" SelectedItem="{Binding Path=SelectedItem}" >
            </ListBox>

            <Label x:Name="label5" Content="Lista de Documentos" Height="36" Canvas.Left="666" Canvas.Top="8" Width="196" FontSize="18" FontWeight="Bold" RenderTransformOrigin="0.194,0.5"/>

            <!--Tipo de Documento-->
            <ComboBox x:Name="comboBox" Height="38" Canvas.Left="83" Canvas.Top="311" Width="517" BorderThickness="1" BorderBrush="#FFBDBDBD" ItemsSource="{Binding Path=ListaTipo}"  DisplayMemberPath="tipo_documento"  SelectedValuePath="id_tipo" SelectedValue="{Binding id_tipo}" FontSize="18" IsEnabled="{Binding TipoEnabled}"  />
            <Label x:Name="label6" Content="Tipo de Documento" Height="29" Canvas.Left="88" Canvas.Top="282" Width="161" FontSize="16" FontWeight="Bold"/>


            <!--Nombre del departamento-->
            <ComboBox x:Name="comboBox1" Height="38" Canvas.Left="88" Canvas.Top="413" Width="517" BorderThickness="1" BorderBrush="#FFBDBDBD" FontSize="18" ItemsSource="{Binding Path=ListaDepartamento}" DisplayMemberPath="nombre_dep" SelectedValuePath="id_dep" SelectedValue="{Binding id_dep}" IsEnabled="{Binding DepartamentoEnabled}"/>
            <Label x:Name="label7" Content="Nombre del Departamento/ Proceso" Height="37" Canvas.Left="90" Canvas.Top="376" Width="309" FontSize="16" FontWeight="Bold"/>

            <!--Usuario-->
            <ComboBox x:Name="comboBox2" Height="38" Canvas.Left="90" Canvas.Top="507" Width="517" BorderThickness="1" BorderBrush="#FFBDBDBD" FontSize="18" ItemsSource="{Binding Path=ListaUsuarios}"  SelectedValuePath="usuario" SelectedValue="{Binding usuario}" Background="White" IsEnabled="{Binding UsuarioEnabled}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="nombre" />
                                    <Binding Path="APaterno" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label x:Name="label8" Content="Usuario Elaboró" Height="28" Canvas.Left="90" Canvas.Top="478" Width="208" FontSize="16" FontWeight="Bold"/>
            <ComboBox x:Name="comboBox3" Height="38" Canvas.Left="90" Canvas.Top="606" Width="514" BorderThickness="1" BorderBrush="#FFBDBDBD" FontSize="18" Background="White" ItemsSource="{Binding Path=ListaUsuarios}"  SelectedValuePath="usuario" SelectedValue="{Binding usuarioAutorizo}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="nombre" />
                                    <Binding Path="APaterno" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label x:Name="label9" Content="Usuario Autorizó" Height="34" Canvas.Left="90" Canvas.Top="572" Width="234" FontSize="16" FontWeight="Bold"/>

        </Canvas>

        <!--Barra-->
        <ToolBar x:Name="toolBar" HorizontalAlignment="Left" Height="56" VerticalAlignment="Top" Width="1492" Style="{DynamicResource MaterialDesignToolBar}" ClipToBounds="False">
            <Button ToolTip="Agregar Usuario" Command="{Binding AgregarUsuario}" Cursor="Hand" Height="56" Margin="0,0,0,-2" Width="57">
                <Rectangle Width="24" Height="27"  >
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/View;component/Images/addUser.png"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Button>

            <Separator></Separator>

            <Button ToolTip="Agregar Tipo de Documento" Command="{Binding AgregarTipo}" Cursor="Hand" Height="56" Margin="0,0,0,-2" Width="54">
                <Rectangle Width="23" Height="24"  >
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/View;component/Images/addTipo.png"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Button>
            <Separator></Separator>
            <Button ToolTip="Agregar Departamento" Command="{Binding AgregarDepartamento}" Cursor="Hand" Height="56" Margin="0,0,0,-2" Width="57">
                <Rectangle Width="29" Height="28"   >
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/View;component/Images/AddDep.png"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Button>
        </ToolBar>
        <Grid HorizontalAlignment="Left" Height="693" Margin="1178,104,0,-161" Grid.RowSpan="2" VerticalAlignment="Top" Width="326">
            <ListBox Canvas.Left="666" Canvas.Top="51" ItemsSource="{Binding ListaValidaciones}" ItemTemplate="{StaticResource ListCheck}"  Background="White" Foreground="#DD040404" >
            </ListBox>
        </Grid>
    </Grid>
</Controls:MetroWindow>
